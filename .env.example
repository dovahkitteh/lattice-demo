# Lattice Service Configuration

# Device Configuration
# Set to "0" to force CPU usage, "1" to try GPU with CPU fallback
USE_CUDA=1

# Database Configuration
LATTICE_DB_PATH=./data/lattice
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASS=pass

# LLM Configuration
LLM_API=http://127.0.0.1:5000


ANTHROPIC_API_KEY=key
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# OpenAI-Compatible API Configuration (External APIs)
# Uncomment and set these to use external OpenAI-compatible APIs instead of local
OPENAI_API_KEY=key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# Performance Configuration
CONTEXT_WINDOW_SIZE=8192
RECURSION_BUFFER_SIZE=13

# Memory Retrieval Configuration
AFFECT_SIMILARITY_THRESHOLD=0.2
MAX_CONTEXT_MEMORIES=10

# Thinking Layer Configuration (Tier 1 Optimization)
THINKING_LAYER_ENABLED=true
THINKING_MAX_TIME=150.0
THINKING_DEPTH_THRESHOLD=0.4
THINKING_DEBUG_LOGGING=true

# Testing
LATTICE_TEST_MODE=false
